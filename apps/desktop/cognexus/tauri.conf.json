{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cognexus",
  "version": "0.1.0",
  "identifier": "com.cognexus.app",
  "build": {
    "frontendDist": "./frontend/wwwroot"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Cognexus",
        "width": 1200,
        "height": 800,
        "transparent": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "resources": {
      "../../../target/release/resources/": ""
    }
  }
}